<h1 class="text-center">Todos</h1>

<div id="new-todo">
  <form action="/todos" method="post">
    <div class="form-group">
      <label for="">Title</label>
      <input id="todo_title"
        type="text"
        name="todo[title]"
        class="form-control"
        placeholder="Title...">
    </div>
    <div class="form-group">
      <label for="todo_due_date">Due Date</label>
      <input id="todo_due_date"
        type="date"
        name="todo[due_date]"
        value="{{ dueDate }}"
        class="form-control">
    </div>
    <div class="form-group">
      <input type="submit" class="btn btn-primary">
    </div>
  </form>
</div>

<div id="todos">
  <h2>Todos List</h2>

  {{#if todos.length }}
    <ul>
      {{#each todos as |todo| }}
        <li>
          <p>Title: {{ todo.title }}</p>
          <p>Due Date: {{ date todo.dueDate }}</p>
        </li>
      {{/each }}
    </ul>
  {{else }}
    <p class="text-danger">No todos yet!</p>
  {{/if }}
</div>
